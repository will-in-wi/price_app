<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Unit category</th>
      <th>Price per unit</th>
      <th>Name</th>
      <th>Store</th>
      <th>Price last updated</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.unit_category %></td>
        <td><%= item.price_per_unit %></td>
        <td><%= item.name %></td>
        <td><%= item.store %></td>
        <td><%= item.price_last_updated %></td>
        <td><%= item.notes %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

