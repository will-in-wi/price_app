<h1>Listing recipe_items</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Item</th>
      <th>Amount</th>
      <th>Unit</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_items.each do |recipe_item| %>
      <tr>
        <td><%= recipe_item.recipe %></td>
        <td><%= recipe_item.item %></td>
        <td><%= recipe_item.amount %></td>
        <td><%= recipe_item.unit_id %></td>
        <td><%= recipe_item.notes %></td>
        <td><%= link_to 'Show', recipe_item %></td>
        <td><%= link_to 'Edit', edit_recipe_item_path(recipe_item) %></td>
        <td><%= link_to 'Destroy', recipe_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

